# Vercel deployment configuration for environment variables
# These should be set in your Vercel dashboard

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.vercel.app,.now.sh,localhost,127.0.0.1

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Database (Vercel uses serverless functions, so SQLite is fine for demo)
# For production, consider using Vercel's PostgreSQL addon or external DB

# API Configuration
API_BASE_URL=https://your-app.vercel.app/api
FRONTEND_URL=https://your-app.vercel.app

# Vercel specific
VERCEL=1
