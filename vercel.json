{
  "version": 2,
  "builds": [
    {
      "src": "lagrange_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_static.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "lagrange_project/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "lagrange_project.settings",
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "lagrange_project/wsgi.py": {
      "maxDuration": 30
    }
  }
}
